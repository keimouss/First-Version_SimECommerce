@model IEnumerable<SimECommerce.Models.Picture>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PictureBinary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MimeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeoFilename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AltAttribute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitleAttribute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNew)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PictureBinary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MimeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeoFilename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltAttribute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleAttribute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNew)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
